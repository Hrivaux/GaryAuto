{% extends 'base.html.twig' %}

{% block title %}Mes véhicules{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">Mes véhicules</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 p-4 rounded {{ label == 'error' ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700' }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- BOUTON + -->
    <div class="mb-8">
        <button onclick="document.getElementById('modal').classList.remove('hidden')" 
                class="w-full opacity-25 text-5xl text-white bg-gray-400 hover:bg-gray-700 py-6 rounded-2xl font-bold shadow transition">
            +
        </button>
    </div>

    <!-- LISTE DES VEHICULES -->
    <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-3">
        {% for vehicle in vehicles %}
            <div class="bg-white p-6 rounded-2xl shadow hover:shadow-lg transition">
                {% if vehicle.logoMarque %}
                    <img src="{{ vehicle.logoMarque }}" alt="{{ vehicle.marque }}" class="h-12 mb-2">
                {% endif %}
                <h2 class="text-xl font-semibold">{{ vehicle.marque }} {{ vehicle.modele }}</h2>
                <p class="text-sm text-gray-500">{{ vehicle.immat }} | {{ vehicle.vin }}</p>
                <p class="text-sm text-gray-600">Date: {{ vehicle.dateMiseEnCirculation ? vehicle.dateMiseEnCirculation|date('d/m/Y') : '—' }}</p>
            </div>
        {% else %}
            <p class="text-gray-600">Aucun véhicule enregistré.</p>
        {% endfor %}
    </div>

    <!-- MODAL AJOUT -->
   <div id="modal" class="fixed inset-0 z-50 bg-black bg-opacity-40 flex items-center justify-center hidden">
    <div class="relative w-full max-w-lg bg-white rounded-2xl shadow-xl p-8">
        <!-- Close button -->
        <button
            onclick="document.getElementById('modal').classList.add('hidden')"
            class="absolute top-4 right-4 text-gray-400 hover:text-red-500 transition text-xl font-bold"
            aria-label="Fermer la fenêtre">
            &times;
        </button>

        <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Ajouter un véhicule</h2>

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.recherche, 'Plaque ou VIN', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.recherche, {
                    'attr': {
                        'class': 'mt-1 block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring focus:ring-blue-300 focus:border-blue-400',
                        'placeholder': 'Ex: CS-641-WY ou VF1DZ0N0641118804'
                    }
                }) }}
                {{ form_errors(form.recherche) }}
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition">
                Rechercher et enregistrer
            </button>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
