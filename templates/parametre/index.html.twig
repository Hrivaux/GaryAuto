{% extends 'base.html.twig' %}

{% block title %}Paramètres du site{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 dark:bg-gray-100/40 py-10 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto bg-white/70 backdrop-blur-md rounded-2xl shadow-xl p-10 border border-gray-200">
        <h1 class="text-4xl font-bold text-gray-800 mb-8 flex items-center gap-3">
            ⚙️ Paramètres du site
        </h1>

        <form method="post" action="{{ path('app_parametre') }}" class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <!-- 🎨 Couleur principale (sélection par bulles) -->
            <div class="md:col-span-2">
                <label class="block text-sm font-semibold text-gray-700 mb-3">🎨 Couleur principale</label>
                <div class="flex gap-4 flex-wrap">
                    {% set colors = ['#3498db', '#e74c3c', '#2ecc71', '#f1c40f', '#9b59b6', '#34495e'] %}
                    {% for color in colors %}
                        <label class="w-10 h-10 rounded-full cursor-pointer border-2 border-white ring-2 ring-gray-300 hover:ring-gray-500 transition" style="background-color: {{ color }}">
                            <input type="radio" name="site_color" value="{{ color }}" class="sr-only">
                        </label>
                    {% endfor %}
                </div>
            </div>

            <!-- 🔤 Police -->
            <div>
                <label for="fontChoice" class="block text-sm font-semibold text-gray-700 mb-2">🔤 Police de caractères</label>
                <select id="fontChoice" name="font" class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-800 shadow-sm focus:ring focus:ring-indigo-300">
                    <option value="sans-serif">Sans Serif</option>
                    <option value="serif">Serif</option>
                    <option value="monospace">Monospace</option>
                </select>
            </div>

            <!-- 📐 Largeur du site -->
            <div>
                <label for="layoutWidth" class="block text-sm font-semibold text-gray-700 mb-2">📐 Largeur du site</label>
                <select id="layoutWidth" name="layout_width" class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-800 shadow-sm">
                    <option value="full">Pleine largeur</option>
                    <option value="boxed">Encadré (box)</option>
                </select>
            </div>

            <!-- 🖼️ Logo URL -->
            <div class="md:col-span-2">
                <label for="siteLogo" class="block text-sm font-semibold text-gray-700 mb-2">🖼️ Logo du site (URL)</label>
                <input type="url" id="siteLogo" name="logo_url" placeholder="https://..." class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-800 shadow-sm">
            </div>

            <!-- 🌙 Mode sombre -->
            <div class="flex items-center gap-3">
                <input type="checkbox" id="darkMode" name="dark_mode" class="h-5 w-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
                <label for="darkMode" class="text-sm text-gray-700">🌙 Activer le mode sombre</label>
            </div>

            <!-- ⬇️ Afficher le footer -->
            <div class="flex items-center gap-3">
                <input type="checkbox" id="showFooter" name="show_footer" class="h-5 w-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
                <label for="showFooter" class="text-sm text-gray-700">⬇️ Afficher le pied de page</label>
            </div>

            <!-- 🎨 Style des boutons -->
            <div class="md:col-span-2">
                <label for="buttonStyle" class="block text-sm font-semibold text-gray-700 mb-2">🎨 Style des boutons</label>
                <select id="buttonStyle" name="button_style" class="w-full px-4 py-3 rounded-xl border border-gray-300 bg-white text-gray-800 shadow-sm">
                    <option value="rounded">Arrondi</option>
                    <option value="flat">Plat</option>
                    <option value="outline">Contour</option>
                </select>
            </div>

            <!-- 🔘 Enregistrer -->
            <div class="md:col-span-2 text-right">
                <button type="submit" class="inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white text-base font-medium rounded-xl shadow transition duration-300">
                    💾 Enregistrer les modifications
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
